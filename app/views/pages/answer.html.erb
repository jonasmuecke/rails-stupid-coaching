    <h1>Stupid Coach</h1>
    <%if params[:question] == 'I am going to work'%>
      <h2><%="#{params[:question]}"%></h2>
      <h3>-you</h3>
      <h2><%=%'Great!'%></h2>
      <h3>-your coach</h3>
    <%elsif params[:question].end_with?('?')%>
      <h2><%="#{params[:question]}"%></h2>
      <h3>-you</h3>
      <h2><%='Silly question, get dressed and go to work!'%></h2>
      <h3>-your coach</h3>
    <%else%>
    <div class="you">
      <h2><%="#{params[:question]}"%></h2>
      <h3>-you</h3>
    </div>
    <div class="coach">
      <h2><%='I dont care, get dressed and go to work!'%></h2>
      <h3>-your coach</h3>
    </div>
    <%end%>
    <a href="http://localhost:3000/ask">Ask a new question</a>